set key default
set key box
set key ins vert
set key left top

set terminal png size 600, 400
set output 'p1q2g1.png'

set title "x* versus λ" font "Helvetica,20" norotate
set xlabel "x*" font "Helvetica,15"
set ylabel "λ" font "Helvetica, 15" norotate

set style line 1 lc rgb '#0060ad' lt 1 lw 2 pt 7 pi -1 ps 1.5
set pointintervalbox 3

plot '../data/questao2.dat' using 1:2 with linespoints ls 1 title 'x* versus λ'

reset

set key default
set key box
set key ins vert
set key bot right

set terminal png size 600, 400
set output 'p1q2g2.png'

set title "x(n) versus n" font "Helvetica,20" norotate
set xlabel "n" font "Helvetica,15"
set ylabel "x(n)" offset 2 font "Helvetica, 15"
set xrange [1:30]

set style line 2 lc rgb 'cyan' lt 1 lw 2 pt 7 pi -1 ps 1.5
set style line 3 lc rgb 'violet' lt 1 lw 2 pt 7 pi -1 ps 1.5
set style line 4 lc rgb 'red' lt 1 lw 2 pt 7 pi -1 ps 1.5
set style line 5 lc rgb 'blue' lt 1 lw 2 pt 7 pi -1 ps 1.5
set style line 6 lc rgb 'black' lt 1 lw 2 pt 7 pi -1 ps 1.5
set style line 7 lc rgb 'pink' lt 1 lw 2 pt 7 pi -1 ps 1.5

plot '../data/questao2.1.dat' using 1:2 with lines ls 2 title 'λ = 0.4', \
     '../data/questao2.2.dat' using 1:2 with lines ls 3 title 'λ = 0.9', \
     '../data/questao2.3.dat' using 1:2 with lines ls 4 title 'λ = 1.4', \
     '../data/questao2.4.dat' using 1:2 with lines ls 5 title 'λ = 1.9', \
     '../data/questao2.5.dat' using 1:2 with lines ls 6 title 'λ = 2.4', \
     '../data/questao2.6.dat' using 1:2 with lines ls 7 title 'λ = 2.9'
